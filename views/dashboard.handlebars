{{> dashboard/nav}}
{{> dashboard/tabs}}

<div class="dashboard-body">

    <div class="main-content">

        <div class="flex-center quick-log">
                
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="body-part text-center">
                            Right Arm
                        </div>
                        <div class="smiley-container clear">
                            <div class="smiley">
                                <i class="far fa-laugh"></i>
                            </div> <!-- /smiley -->
                            <div class="smiley">
                                <i class="far fa-smile"></i>
                            </div> <!-- /smiley -->
                            <div class="smiley">
                                <i class="far fa-meh"></i>
                            </div> <!-- /smiley -->
                            <div class="smiley">
                                <i class="far fa-frown"></i>
                            </div> <!-- /smiley -->
                            <div class="smiley">
                                <i class="far fa-sad-cry"></i>
                            </div> <!-- /smiley -->
                        </div> <!-- /smiley-container -->
                    </div>
                </div> <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <form>
                            <div class="form-group">
                                <input type="range" min="0" max="10" value="5" class="form-control-range slider" id="pain-level-range">
                            </div>
                            <div class="pain-level text-center">
                                Pain Level: <span id="pain-value"></span>
                            </div>
                            <button type="submit" class="btn btn-block btn-primary">Submit</button>
                        </form>
                    </div>
                </div> <!-- /row -->
            </div> <!-- /container -->
            
        </div> <!-- /quick-log -->

    </div> <!-- /main-content -->

    {{> dashboard/down-arrow}}
    
</div> <!-- /dashboard-body -->

{{> footer}}
    
