<div class="dashboard-body">

    <div class="page-title text-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1>Add New Injury</h1>
                </div>
            </div>
        </div>
    </div> <!-- /page-title -->

    <div class="main-content">

        <div class="flex-center quick-log">

            <div class="container">
                <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <form>
                            <div id="add-new-container">

                                <div class="form-group">
                                    <button id="btn-body-select" type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#body-modal">
                                        Select Body Part
                                    </button>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control custom-field" id="body-part" placeholder="Body Part">
                                </div>
                                <div class="smiley-container clear">
                                    <div class="smiley">
                                        <i class="far fa-laugh"></i>
                                    </div>
                                    <!-- /smiley -->
                                    <div class="smiley">
                                        <i class="far fa-smile"></i>
                                    </div>
                                    <!-- /smiley -->
                                    <div class="smiley">
                                        <i class="far fa-meh"></i>
                                    </div>
                                    <!-- /smiley -->
                                    <div class="smiley">
                                        <i class="far fa-frown"></i>
                                    </div>
                                    <!-- /smiley -->
                                    <div class="smiley">
                                        <i class="far fa-sad-cry"></i>
                                    </div>
                                    <!-- /smiley -->
                                </div>
                                <div id="existing-user-form">
                                    <div class="form-group">
                                        <input type="range" min="0" max="10" value="5" class="form-control-range slider" id="post-pain-level-range">
                                    </div>
                                    <div class="pain-level text-center">
                                        Pain Intensity:
                                        <span id="post-pain-value"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <select class="custom-select custom-field" id="pain-char">
                                        <option value="None">Select Pain Characteristic</option>
                                        <option value="Sharp">Sharp</option>
                                        <option value="Dull">Dull</option>
                                        <option value="Stabbing">Stabbing</option>
                                        <option value="Throbbing">Throbbing</option>
                                        <option value="Aching">Aching</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control custom-field" id="pain-duration" placeholder="Pain Duration">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control custom-field" id="medications" placeholder="Medications">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control custom-field" id="dosage" placeholder="Dosage">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control custom-field" rows="3" id="notes" placeholder="Notes"></textarea>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-block btn-primary" id="journal-post-submit">Submit</button>
                    </div>
                    </form>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->

    </div>
    <!-- /quick-log -->

</div>
<!-- /main-content -->

{{> down-arrow}}

