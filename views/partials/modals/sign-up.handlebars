<!-- Sign Up Modal -->
<div class="modal fade" id="modalSignUp" tabindex="-1" role="dialog" aria-labelledby="modalSignUpTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalSignUpTitle">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form id="regForm" autocomplete="off">

        <div class="modal-body">

              <div class="form-group">
                  <input type="text" class="form-control custom-field" id="first-name" placeholder="First Name" required>
              </div>
              <div class="form-group">
                  <input type="text" class="form-control custom-field" id="last-name" placeholder="Last Name" required>
              </div>
              <div class="form-group">
                  <input type="email" class="form-control custom-field" id="email" placeholder="E-Mail" required>
              </div>
              <div class="form-group">
                  <input type="password" class="form-control custom-field" id="password" placeholder="Password" required>
              </div>
              <div class="form-group">
                  <input type="date" class="form-control custom-field date-of-birth" id="dob" required>
              </div>
              <div class="form-group">
                  <select id="gender" class="custom-select custom-field" required>
                    <option value="" disabled selected>Gender:</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                  </select>
              </div>
              <div>
                <small id="registerHelp" class="form-text text-muted" style="visibility:hidden"></small>
              </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary btn-sm">Submit</button>
        </div>

      </form>
    </div>
  </div>
</div>